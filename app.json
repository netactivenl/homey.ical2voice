{
  "id": "nl.netactive.homey.ical2voice",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "iCalendar to Voice",
    "nl": "iCalendar to Voice"
  },
  "category": [ "internet" ],
  "description": {
    "en": "This app adds flow cards and voice triggers that enable Homey to announce your (iCal) appointments and emit triggers so you can run flows based on appointments in your calendars.",
    "nl": "Deze app voegt flow kaarten en voice triggers toe die Homey in staat stellen je (iCal) afspraken aan te kondigen en triggers af te vuren, zodat je flows kunt starten o.b.v. afspraken in je kalenders."
  },
  "author": {
    "name": "Net@ctive"
  },
  "contributors": {
    "developers": [
      {
        "name": "Raymond Brink",
        "email": "raymond@netactive.nl"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/netactivenl/homey.ical2voice/issues"
  },
  "homeyCommunityTopicId": 4236,
  "tags": {
    "en": [ "calendar" ],
    "nl": [ "kalender" ]
  },
  "images": {
    "small": "assets/images/small.png",
    "large": "assets/images/large.png"
  },
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:ledring"
  ],
  "speech": [
    {
      "id": "calendar",
      "importance": 1,
      "triggers": {
        "en": [ "calendar" ],
        "nl": [ "kalender" ]
      }
    },
    {
      "id": "schedule",
      "importance": 1,
      "triggers": {
        "en": [ "schedule", "planning" ],
        "nl": [ "agenda", "planning" ]
      }
    },
    {
      "id": "next_appointment",
      "importance": 1,
      "triggers": {
        "en": [ "next appointment" ],
        "nl": [ "volgende afspraak" ]
      }
    },
    {
      "id": "first_appointment",
      "importance": 1,
      "triggers": {
        "en": [ "first appointment" ],
        "nl": [ "eerste afspraak" ]
      }
    },
    {
      "id": "today",
      "importance": 0.3,
      "triggers": {
        "en": [ "today" ],
        "nl": [ "vandaag" ]
      }
    },
    {
      "id": "tomorrow",
      "importance": 0.3,
      "triggers": {
        "en": [ "tomorrow" ],
        "nl": [ "morgen" ]
      }
    },
    {
      "id": "sunday",
      "importance": 0.3,
      "triggers": {
        "en": [ "sunday" ],
        "nl": [ "zondag" ]
      }
    },
    {
      "id": "monday",
      "importance": 0.3,
      "triggers": {
        "en": [ "monday" ],
        "nl": [ "maandag" ]
      }
    },
    {
      "id": "tuesday",
      "importance": 0.3,
      "triggers": {
        "en": [ "tuesday" ],
        "nl": [ "dinsdag" ]
      }
    },
    {
      "id": "wednesday",
      "importance": 0.3,
      "triggers": {
        "en": [ "wednesday" ],
        "nl": [ "woensdag" ]
      }
    },
    {
      "id": "thursday",
      "importance": 0.3,
      "triggers": {
        "en": [ "thursday" ],
        "nl": [ "donderdag" ]
      }
    },
    {
      "id": "friday",
      "importance": 0.3,
      "triggers": {
        "en": [ "friday" ],
        "nl": [ "vrijdag" ]
      }
    },
    {
      "id": "saturday",
      "importance": 0.3,
      "triggers": {
        "en": [ "saturday" ],
        "nl": [ "zaterdag" ]
      }
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "next_appointment_in",
        "title": {
          "en": "Next appointment in...",
          "nl": "Volgende afspraak over..."
        },
        "tokens": [
          {
            "name": "calendar",
            "title": {
              "en": "calendar",
              "nl": "kalender"
            }
          },
          {
            "name": "date",
            "title": {
              "en": "date",
              "nl": "datum"
            }
          },
          {
            "name": "time",
            "title": {
              "en": "time",
              "nl": "tijd"
            }
          },
          {
            "name": "summary",
            "title": {
              "en": "appointment",
              "nl": "afspraak"
            }
          },
          {
            "name": "location",
            "title": {
              "en": "location",
              "nl": "locatie"
            }
          }
        ],
        "args": [
          {
            "name": "timespan_number",
            "type": "number"
          },
          {
            "name": "timespan_unit",
            "type": "dropdown",
            "values": [
              {
                "id": "minutes",
                "label": {
                  "en": "Minutes",
                  "nl": "Minuten"
                }
              },
              {
                "id": "hours",
                "label": {
                  "en": "Hours",
                  "nl": "Uren"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "todays_schedule",
        "title": {
          "en": "All your appointments for today",
          "nl": "Al je afspraken voor vandaag"
        }
      },
      {
        "id": "todays_remaining_schedule",
        "title": {
          "en": "Your appointments later today",
          "nl": "Je afspraken later vandaag"
        }
      },
      {
        "id": "next_appointment",
        "title": {
          "en": "Your next appointment",
          "nl": "Je volgende afspraak"
        }
      },
      {
        "id": "tomorrows_schedule",
        "title": {
          "en": "Your appointments for tomorrow",
          "nl": "Je afspraken van morgen"
        }
      },
      {
        "id": "tomorrows_first_appointment",
        "title": {
          "en": "Your first appointment for tomorrow",
          "nl": "Je eerste afspraak van morgen"
        }
      },
      {
        "id": "weekday_schedule",
        "title": {
          "en": "Your appointments on...",
          "nl": "Je afspraken op..."
        },
        "args": [
          {
            "name": "dow",
            "type": "dropdown",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Sunday",
                  "nl": "Zondag"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "Monday",
                  "nl": "Maandag"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "Tuesday",
                  "nl": "Dinsdag"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "Wednesday",
                  "nl": "Woensdag"
                }
              },
              {
                "id": "4",
                "label": {
                  "en": "Thursday",
                  "nl": "Donderdag"
                }
              },
              {
                "id": "5",
                "label": {
                  "en": "Friday",
                  "nl": "Vrijdag"
                }
              },
              {
                "id": "6",
                "label": {
                  "en": "Saturday",
                  "nl": "Zaterdag"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}